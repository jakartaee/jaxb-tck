  </target>

  <target name="jbxml"
    depends="prepare, build.tck.src, define_jbxml_specific_tasks, extracttests, copy.support.files, walk.suites, generate.jbxml, copy.jbxml"
    description=" JBXML generation target for JAXB TCK 2.0">
