<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        jaxb:version="1.0" xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
	targetNamespace="AttrDecl/scope"
	xmlns:tn="AttrDecl/scope">

	<xsd:attribute name="number" type="xsd:byte">
            <xsd:annotation>
                <xsd:appinfo>
                    <jaxb:property generateIsSetMethod="true">
                        <jaxb:baseType>
                            <jaxb:javaType name="byte"/>
                        </jaxb:baseType>
                    </jaxb:property>
                </xsd:appinfo>
            </xsd:annotation>
	</xsd:attribute>

	<xsd:element name="elementWithAttr">
	  <xsd:complexType>
	    <xsd:attribute ref="tn:number" use="required"/>
	    <xsd:attribute name="price"  type="xsd:decimal"/>
	  </xsd:complexType>
	</xsd:element>

</xsd:schema>

