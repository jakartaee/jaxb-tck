<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
 targetNamespace="globalBindings/localScoping" jaxb:version="2.0"
 xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
 xmlns:test="globalBindings/localScoping">

 <xsd:annotation>
  <xsd:appinfo>
   <jaxb:globalBindings localScoping="toplevel" />
  </xsd:appinfo>
 </xsd:annotation>

 <xsd:annotation>
  <xsd:documentation>
   Test verifies generation of nested enumeration's if localScoping
   customization is "toplevel".
  </xsd:documentation>
 </xsd:annotation>

 <xsd:element name="items" type="test:Items"></xsd:element>

 <xsd:complexType name="Items">
  <xsd:sequence maxOccurs="unbounded">
   <xsd:element name="item">
    <xsd:complexType>
     <xsd:sequence>
      <xsd:element name="content">
       <xsd:simpleType>
        <xsd:annotation>
         <xsd:appinfo>
          <jaxb:typesafeEnumClass name="ItemValues" />
         </xsd:appinfo>
        </xsd:annotation>
        <xsd:restriction base="xsd:string">
         <xsd:enumeration value="c1" />
         <xsd:enumeration value="c2" />
         <xsd:enumeration value="c3" />
        </xsd:restriction>
       </xsd:simpleType>
      </xsd:element>
     </xsd:sequence>
     <xsd:attribute name="attr1" />
    </xsd:complexType>
   </xsd:element>
  </xsd:sequence>
 </xsd:complexType>
</xsd:schema>

