   <TestCase ID="testCase0001">
      <TestCaseDocumentation>
        <Description><![CDATA[
          Positive test. JAXB2.0 spec, 8.9.10.2:
          If the type of the field or property is a collection type, then the collection
          item type must map to a simple schema type.
        ]]></Description>
      </TestCaseDocumentation>
      <TestCaseAttributes>
         <AttrElem Name="pos_neg">positive</AttrElem>
      </TestCaseAttributes>
      <CodeSet>
         <ExternalData SourceName="pos01_1.xml" Type="iodata"/>
